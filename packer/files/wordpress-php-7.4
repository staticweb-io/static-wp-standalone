server {
	listen 443 ssl;
	listen [::]:443 ssl;
	server_name *.compute-1.amazonaws.com;

	include snippets/self-signed.conf;
	include snippets/ssl-params.conf;

	root /home/staticweb/wordpress;

	index index.php index.html index.htm;

	client_max_body_size 1G;

	location / {
		if ( $http_staticweb_cloudfront_authorization = '' ) {
			access_log /var/log/nginx/unauth-access.log;
			return 401;
		}

		if ( $http_staticweb_cloudfront_authorization != 'Bearer 32ueuoeurcoeburECURBUEBUEUR234u++EU' ) {
			access_log /var/log/nginx/unauth-access.log;
			return 403;
		}

		try_files $uri $uri/ =404;

                if (!-e $request_filename) {
                        rewrite ^(.+)$ /index.php?q=$1 last;
                }
	}

	location ~ \.php$ {
                if ( $http_staticweb_cloudfront_authorization = '' ) {
			access_log /var/log/nginx/unauth-access.log;
                        return 401;
                }

                if ( $http_staticweb_cloudfront_authorization != 'Bearer 32ueuoeurcoeburECURBUEBUEUR234u++EU' ) {
			access_log /var/log/nginx/unauth-access.log;
                        return 403;
                }

		include snippets/fastcgi-php.conf;

		fastcgi_pass unix:/run/php/php7.4-fpm.sock;
	}

        location ~ /\.ht {
                deny all;
        }

        location /phpmyadmin/ {
                if ( $http_staticweb_cloudfront_authorization = '' ) {
                        return 401;
                }

                if ( $http_staticweb_cloudfront_authorization != 'Bearer 32ueuoeurcoeburECURBUEBUEUR234u++EU' ) {
                        return 403;
                }

                root /home/staticweb/;
                index index.php index.html index.htm;

                try_files $uri $uri/ =404;

                location ~ \.php$ {
                        include snippets/fastcgi-php.conf;
                        fastcgi_pass unix:/run/php/php7.4-fpm.sock;
                }
        }
}
